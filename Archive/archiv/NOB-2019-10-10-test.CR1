  Average (1,ECU (8),FP2,0) : FieldNames ("EC5_50cm_mV_3")
  Average (1,ECU (9),FP2,0) : FieldNames ("EC5_80cm_mV_3")
  ' Teabag
  'Average (1,EC05cmact (1),FP2,0) : FieldNames ("EC5_05cm_4")
  'Average (1,ECU (10),FP2,0) : FieldNames ("EC5_05cm_mV_4")
